{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./dist",
    "noEmit": false,
    "tsBuildInfoFile": "../../.build-cache/components.tsbuildinfo",
    "paths": {
      "@/*": ["./src/*"],
      "test-utils": ["./src/utils/test-utils"]
    },
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "scripts"]
}